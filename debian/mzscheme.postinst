#!/bin/sh
#
set -e

case "$1" in
    configure)

        mkdir -p /usr/local/lib/plt/collects || /bin/true
	
    ;;

    abort-upgrade|abort-deconfigure|abort-remove)
        # how did we get here?  Force a non-zero exit code
        exit 1
    ;;

    *)
        echo "postinst called with unknown argument: \$1" >&2
    ;;
esac

